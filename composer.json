{
    "name": "lyhty/ownership",
    "description": "Lightweight trait and rule for who owns what in your Laravel project.",
    "keywords": [
        "laravel",
        "ownership",
        "trait",
        "validation",
        "rules"
    ],
    "homepage": "https://matti.suoraniemi.com/creations/lyhty/ownership",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Matti Suoraniemi",
            "email": "matti@suoraniemi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 | ^8.0 | ^8.2",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0 || ^11.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Lyhty\\Ownership\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lyhty\\Ownership\\OwnershipServiceProvider"
            ]
        }
    }
}
